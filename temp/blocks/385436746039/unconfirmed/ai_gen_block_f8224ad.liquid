{% doc %}
  @prompt
    make me a hero section in which on right the product image and on the other side the tag line
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .ai-hero-tagline-{{ ai_gen_id }} {
    font-size: {{ block.settings.tagline_size }}px;
    color: {{ block.settings.tagline_color }};
    line-height: 1.2;
    margin: 0;
  }

  .ai-hero-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 15px 30px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .ai-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-hero-image-wrapper-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_radius }}px;
    object-fit: cover;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: 400px;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .ai-hero-section-{{ ai_gen_id }} {
      flex-direction: column-reverse;
      gap: 30px;
      padding: {{ block.settings.section_padding | times: 0.6 }}px 20px;
    }

    .ai-hero-tagline-{{ ai_gen_id }} {
      font-size: {{ block.settings.tagline_size | times: 0.7 }}px;
    }

    .ai-hero-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      align-self: stretch;
      text-align: center;
    }
  }
{% endstyle %}

<div class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.tagline != blank %}
      <h1 class="ai-hero-tagline-{{ ai_gen_id }}">{{ block.settings.tagline }}</h1>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-hero-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-hero-button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>

  <div class="ai-hero-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.product_image %}
      <img
        src="{{ block.settings.product_image | image_url: width: 800 }}"
        alt="{{ block.settings.product_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.product_image.width }}"
        height="{{ block.settings.product_image.height }}"
        class="ai-hero-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-hero-image-placeholder-{{ ai_gen_id }}">
        {{ 'product-1' | placeholder_svg_tag }}
        <div class="ai-hero-empty-state-{{ ai_gen_id }}">
          Next, add a product image
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hero section",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "tagline",
      "label": "Tagline",
      "default": "<p>Discover Your Perfect Style</p>"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Explore our latest collection of premium products designed to elevate your everyday experience.</p>"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button hover color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "button_text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Button text size",
      "default": 16
    },
    {
      "type": "range",
      "id": "button_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Button border radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product image"
    },
    {
      "type": "range",
      "id": "image_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Image border radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "tagline_color",
      "label": "Tagline color",
      "default": "#121212"
    },
    {
      "type": "range",
      "id": "tagline_size",
      "min": 24,
      "max": 72,
      "step": 2,
      "unit": "px",
      "label": "Tagline size",
      "default": 48
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description color",
      "default": "#121212"
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Description size",
      "default": 16
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 20,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Section padding",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Hero section"
    }
  ]
}
{% endschema %}
